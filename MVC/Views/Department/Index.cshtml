@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Departments</h1>

<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create New Department</a>

@if(Model.Count() > 0)
{
    <table class="mt-3 table text-center">
        <thead>
            <tr class="font-weight-bold">
                <td>@Html.DisplayNameFor(d=> d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.DateOfCreation</td>
                    <partial name="_IndexButtonsPartial" model="@item.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning my-5">
        <h4>There is No Departments!</h4>
    </div>
}