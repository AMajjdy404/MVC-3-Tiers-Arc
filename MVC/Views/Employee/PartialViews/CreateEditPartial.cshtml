@model Employee

@{
    var departments = new SelectList(@ViewBag.Departments, "Id", "Name");
}

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Department"></label>
   <select asp-items="departments" asp-for="DepartmentId" class="form-control">
       <option value="@null">----- Select Department -----</option>
   </select>
    
</div>
<div class="form-group">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <input asp-for="IsActive" type="checkbox" class="form-check-input ml-2" id="IsActive">
    <label asp-for="IsActive" class="form-check-label ml-5" for="IsActive"></label>
</div>
<div class="form-group">
    <div class="form-check">
        <input asp-for="Gender" class="form-check-input" type="radio" id="Male" value="1">
        <label class="form-check-label" for="Male">
            Male
        </label>
        <input asp-for="Gender" class="form-check-input ml-3" type="radio" id="Female" value="2">
        <label class="form-check-label ml-5" for="Female">
            Female
        </label>
    </div>

    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" />
</div>